'use strict'

cfg          = require '../config.json'
gulp         = require 'gulp'
run_sequence = require 'run-sequence'
clp          = require './clp.coffee'

gulp.task 'default', (cb) ->
  if clp.precommit
    run_sequence ['coffeescript'], ['cmprs_js'], cb
  else if clp.nopreprocess
    run_sequence 'watch', cb
  else
	  run_sequence ['coffeescript'], ['watch'], cb
	return
