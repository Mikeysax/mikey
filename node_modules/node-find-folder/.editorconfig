# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# The indent size used in the `package.json` file cannot be changed
# https://github.com/npm/npm/pull/3180#issuecomment-16336516
[{*.jade,*.html,*.sass,*.scss,*.coffee,*.json,*.geojson,.travis.yml,appveyor.yml,.jshintrc,.jscsrc,.bowerrc,.eslintrc,.eslintignore}]
indent_size = 2
